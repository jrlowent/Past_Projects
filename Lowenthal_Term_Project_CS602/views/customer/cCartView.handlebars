<nav>
	<a href="/index">Back to Home</a>
    <a href="/customer/products">See Our Products</a>
	<a href="/customer/search">Find an Instrument</a>
	<a href="/customer/view_cart">View Cart</a>
</nav>
<table>
	<thead>
		<tr>
			<th>Product ID</th>
            <th>Product Name</th>
			<th>Description</th>
            <th>Price</th>
            <th>Quantity Added</th>
		</tr>
	</thead>
	<tbody>
		{{#each data.addedProducts}}
			<tr>
				<td>{{this.productId}}</td>
                <td>{{this.productName}}</td>
				<td>{{this.productDescription}}</td>
                <td>{{this.productPrice}}</td>
				<td>{{this.quantityAdded}}</td>
				<td>
					<a href="/customer/remove_item/{{this.id}}">Remove Item</a> 
				</td>
			</tr>
		{{/each}}
	</tbody>
</table>
<a href="/customer/checkout"><button>Proceed to Checkout</button></a>
  <form method="post" action='/admin/add_product/'>
    <table>
      <tbody>
        <tr>
          <th>Product ID: </td>
          <td><input type="text" name="product_id" required></td>
        </tr> 
        <tr>
          <th>Product Name: </td>
          <td><input type="text" name="product_name" required></td>
        </tr>
        <tr>
          <th>Product Description: </td>
          <td><input type="text" name="product_description" required></td>
        </tr>
        <tr>
          <th>Product Price: </td>
          <td><input type="text" name="product_price" required></td>
        </tr>
        <tr>
          <th>Product Quantity: </td>
          <td><input type="text" name="product_quantity"></td>
        </tr>
      </tbody>
      <tfooter>
        <tr>
          <td>
              <input type="submit" name="submit" value="Save">
              <input type="button" value="Cancel"
                  class="cancel" onclick="cancelAction()">
          </td>
        </tr>
      </tfooter>
    </table>
  </form>